@{
    ViewData["Title"] = "Home Page";
}

    <div id="homeAnon">
        @* TODO: It's possible to display top writer on the banner *@
        <div id="carouselExampleIndicators" class="myCarroMain carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="myCarro carousel-inner">
                <div class="carousel-item active ">
                    <img class="picture d-block" src="~/images/book1.jpg" alt="Book Banner 1" width="200">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Share your dreams</h5>
                        <p>Find your voice!</p>
                    </div>
                </div>
                <div class="carousel-item ">
                    <img class="picture d-block" src="~/images/book2.jpg" alt="Book Banner 2">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Share your dreams</h5>
                        <p>Find your voice!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="picture d-block" src="~/images/book3.jpg" alt="Book Banner 3">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Share your dreams</h5>
                        <p>Find your voice!</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
@section scripts{

    @{ await Html.RenderPartialAsync("_MyScriptsPartial"); }
}