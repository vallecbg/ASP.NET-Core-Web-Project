        });
    </script>
    <script>
        $(document).ready(function () {
            $('#dataFromDb3').DataTable({ responsive: true });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#dataFromDb4').DataTable({ responsive: true });
        });
    </script>
}