@model LoginInputModel
@{
    ViewData["Title"] = "Login";
    var error = ViewData[GlobalConstants.ModelError];
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
        @if (error != null)
        {
            <p class="text-light">@error</p>
        }
        <form method="post" asp-action="Login" asp-controller="Users">

            <hr class="h2 bg-BookCreator" />
            <div class="form-group">
                <label asp-for="Username" class="d-flex justify-content-center text-dark "></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-light"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="d-flex justify-content-center text-dark "></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-light"></span>
            </div>
            <hr class="h2 bg-BookCreator" />
            <div class="d-flex justify-content-center">
                <button type="submit" name="LoginButton" class="btn btn-info">Login</button>
            </div>
        </form>

        <div>
            <a asp-action="Register" asp-controller="Users"><span class="badge badge-pill badge-info">Register as a new user</span></a>
        </div>
    </div>
</div>